<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.net.sparrow.mapper.sys.DeptMapper">

    <resultMap type="com.net.sparrow.entity.sys.DeptEntity" id="DeptResult">
        <result property="id"    column="id" />
        <result property="name"    column="name" />
        <result property="pid"    column="pid" />
        <result property="validStatus"    column="valid_status" />
        <result property="createUserId"    column="create_user_id" />
        <result property="createUserName"    column="create_user_name" />
        <result property="createTime"    column="create_time" />
        <result property="updateUserId"    column="update_user_id" />
        <result property="updateUserName"    column="update_user_name" />
        <result property="updateTime"    column="update_time" />
        <result property="isDel"    column="is_del" />
    </resultMap>


    <sql id="paginationSql">
        <if test="pageSize > 0">
           LIMIT #{pageBegin} , #{pageSize}
        </if>
    </sql>

	<sql id="selectDeptColumn">
         id,
         name,
         pid,
         valid_status,
         create_user_id,
         create_user_name,
         create_time,
         update_user_id,
         update_user_name,
         update_time,
         is_del
    </sql>

    <sql id="queryWhere">
        <where>
            
            <if test="id != null ">
                AND id = #{id}
            </if>
            
            <if test="name != null  and name != ''">
                AND name = #{name}
            </if>
            
            <if test="pid != null ">
                AND pid = #{pid}
            </if>
            
            <if test="validStatus != null ">
                AND valid_status = #{validStatus}
            </if>
            
            <if test="createUserId != null ">
                AND create_user_id = #{createUserId}
            </if>
            
            <if test="createUserName != null  and createUserName != ''">
                AND create_user_name = #{createUserName}
            </if>
            
            <if test="createTime != null ">
                AND create_time = #{createTime}
            </if>
            
            <if test="updateUserId != null ">
                AND update_user_id = #{updateUserId}
            </if>
            
            <if test="updateUserName != null  and updateUserName != ''">
                AND update_user_name = #{updateUserName}
            </if>
            
            <if test="updateTime != null ">
                AND update_time = #{updateTime}
            </if>
            
            <if test="isDel != null ">
                AND is_del = #{isDel}
            </if>
                        AND is_del = 0
        </where>
    </sql>

    <select id="findById" parameterType="Long"
            resultMap="DeptResult">
        SELECT
        <include refid="selectDeptColumn"/>
        FROM sys_dept
        WHERE id = #{id}
    </select>

    <select id="searchByCondition"
            parameterType="com.net.sparrow.entity.sys.DeptConditionEntity"
            resultMap="DeptResult">
        SELECT
        <include refid="selectDeptColumn"/>
        FROM sys_dept
        <include refid="queryWhere"/>
        <include refid="paginationSql"/>
    </select>

    <select id="searchCount"
            parameterType="com.net.sparrow.entity.sys.DeptConditionEntity"
            resultType="int">
        SELECT
        COUNT(*)
        FROM sys_dept
        <include refid="queryWhere"/>
    </select>


    <update id="update" parameterType="com.net.sparrow.entity.sys.DeptEntity">
        UPDATE sys_dept
        <trim prefix="SET" suffixOverrides=",">
                                                        
                    <if test="name != null  and name != ''">
                        name = #{name},
                    </if>

                                            
                    <if test="pid != null ">
                        pid = #{pid},
                    </if>

                                            
                    <if test="validStatus != null ">
                        valid_status = #{validStatus},
                    </if>

                                            
                    <if test="createUserId != null ">
                        create_user_id = #{createUserId},
                    </if>

                                            
                    <if test="createUserName != null  and createUserName != ''">
                        create_user_name = #{createUserName},
                    </if>

                                            
                    <if test="createTime != null ">
                        create_time = #{createTime},
                    </if>

                                            
                    <if test="updateUserId != null ">
                        update_user_id = #{updateUserId},
                    </if>

                                            
                    <if test="updateUserName != null  and updateUserName != ''">
                        update_user_name = #{updateUserName},
                    </if>

                                            
                    <if test="updateTime != null ">
                        update_time = #{updateTime},
                    </if>

                                            
                    <if test="isDel != null ">
                        is_del = #{isDel},
                    </if>

                                        update_time=now(3)
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteByIds">
        UPDATE sys_dept
        SET is_del = 1,update_time=now(3),update_user_id=#{entity.updateUserId},update_user_name=#{entity.updateUserName}
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <insert id="insert" parameterType="com.net.sparrow.entity.sys.DeptEntity">
        INSERT INTO sys_dept
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="name != null  and name != ''">
                name,
            </if>


            <if test="pid != null ">
                pid,
            </if>


            <if test="validStatus != null ">
                valid_status,
            </if>


            <if test="createUserId != null ">
                create_user_id,
            </if>


            <if test="createUserName != null  and createUserName != ''">
                create_user_name,
            </if>


            <if test="createTime != null ">
                create_time,
            </if>


            <if test="updateUserId != null ">
                update_user_id,
            </if>


            <if test="updateUserName != null  and updateUserName != ''">
                update_user_name,
            </if>


            <if test="updateTime != null ">
                update_time,
            </if>


            <if test="isDel != null ">
                is_del,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">
                #{name},
            </if>

            <if test="pid != null ">
                #{pid},
            </if>

            <if test="validStatus != null ">
                #{validStatus},
            </if>

            <if test="createUserId != null ">
                #{createUserId},
            </if>

            <if test="createUserName != null  and createUserName != ''">
                #{createUserName},
            </if>

            <if test="createTime != null ">
                #{createTime},
            </if>

            <if test="updateUserId != null ">
                #{updateUserId},
            </if>

            <if test="updateUserName != null  and updateUserName != ''">
                #{updateUserName},
            </if>

            <if test="updateTime != null ">
                #{updateTime},
            </if>

            <if test="isDel != null ">
                #{isDel},
            </if>

        </trim>
    </insert>

    <select id="findByIds" parameterType="Long"
            resultMap="DeptResult">
        SELECT
          <include refid="selectDeptColumn"/>
        FROM sys_dept
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

</mapper>
