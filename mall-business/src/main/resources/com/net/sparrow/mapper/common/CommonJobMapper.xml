<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.net.sparrow.mapper.common.CommonJobMapper">

    <resultMap type="com.net.sparrow.entity.common.CommonJobEntity" id="CommonJobResult">
        <result property="id" column="id"/>
        <result property="jobName" column="job_name"/>
        <result property="pauseStatus" column="pause_status"/>
        <result property="beanName" column="bean_name"/>
        <result property="methodName" column="method_name"/>
        <result property="cronExpression" column="cron_expression"/>
        <result property="params" column="params"/>
        <result property="remark" column="remark"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createUserName" column="create_user_name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUserId" column="update_user_id"/>
        <result property="updateUserName" column="update_user_name"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDel" column="is_del"/>
    </resultMap>


    <sql id="paginationSql">
        <if test="pageSize > 0">
            LIMIT #{pageBegin} , #{pageSize}
        </if>
    </sql>

    <sql id="selectCommonJobColumn">
         id,
         job_name,
         pause_status,
         bean_name,
         method_name,
         cron_expression,
         params,
         remark,
         create_user_id,
         create_user_name,
         create_time,
         update_user_id,
         update_user_name,
         update_time,
         is_del
    </sql>

    <sql id="queryWhere">
        <where>

            <if test="id != null ">
                AND id = #{id}
            </if>

            <if test="jobName != null  and jobName != ''">
                AND job_name = #{jobName}
            </if>

            <if test="pauseStatus != null ">
                AND pause_status = #{pauseStatus}
            </if>

            <if test="beanName != null  and beanName != ''">
                AND bean_name = #{beanName}
            </if>

            <if test="methodName != null  and methodName != ''">
                AND method_name = #{methodName}
            </if>

            <if test="cronExpression != null  and cronExpression != ''">
                AND cron_expression = #{cronExpression}
            </if>

            <if test="params != null  and params != ''">
                AND params = #{params}
            </if>

            <if test="remark != null  and remark != ''">
                AND remark = #{remark}
            </if>

            <if test="createUserId != null ">
                AND create_user_id = #{createUserId}
            </if>

            <if test="createUserName != null  and createUserName != ''">
                AND create_user_name = #{createUserName}
            </if>

            <if test="createTime != null ">
                AND create_time = #{createTime}
            </if>

            <if test="updateUserId != null ">
                AND update_user_id = #{updateUserId}
            </if>

            <if test="updateUserName != null  and updateUserName != ''">
                AND update_user_name = #{updateUserName}
            </if>

            <if test="updateTime != null ">
                AND update_time = #{updateTime}
            </if>

            <if test="isDel != null ">
                AND is_del = #{isDel}
            </if>
            AND is_del = 0
        </where>
    </sql>

    <select id="findById" parameterType="Long"
            resultMap="CommonJobResult">
        SELECT
        <include refid="selectCommonJobColumn"/>
        FROM common_job
        WHERE id = #{id}
    </select>

    <select id="searchByCondition"
            parameterType="com.net.sparrow.entity.common.CommonJobConditionEntity"
            resultMap="CommonJobResult">
        SELECT
        <include refid="selectCommonJobColumn"/>
        FROM common_job
        <include refid="queryWhere"/>
        <include refid="paginationSql"/>
    </select>

    <select id="searchCount"
            parameterType="com.net.sparrow.entity.common.CommonJobConditionEntity"
            resultType="int">
        SELECT
        COUNT(*)
        FROM common_job
        <include refid="queryWhere"/>
    </select>


    <update id="update" parameterType="com.net.sparrow.entity.common.CommonJobEntity">
        UPDATE common_job
        <trim prefix="SET" suffixOverrides=",">

            <if test="jobName != null  and jobName != ''">
                job_name = #{jobName},
            </if>


            <if test="pauseStatus != null ">
                pause_status = #{pauseStatus},
            </if>


            <if test="beanName != null  and beanName != ''">
                bean_name = #{beanName},
            </if>


            <if test="methodName != null  and methodName != ''">
                method_name = #{methodName},
            </if>


            <if test="cronExpression != null  and cronExpression != ''">
                cron_expression = #{cronExpression},
            </if>


            <if test="params != null  and params != ''">
                params = #{params},
            </if>


            <if test="remark != null  and remark != ''">
                remark = #{remark},
            </if>


            <if test="createUserId != null ">
                create_user_id = #{createUserId},
            </if>


            <if test="createUserName != null  and createUserName != ''">
                create_user_name = #{createUserName},
            </if>


            <if test="createTime != null ">
                create_time = #{createTime},
            </if>


            <if test="updateUserId != null ">
                update_user_id = #{updateUserId},
            </if>


            <if test="updateUserName != null  and updateUserName != ''">
                update_user_name = #{updateUserName},
            </if>


            <if test="updateTime != null ">
                update_time = #{updateTime},
            </if>


            <if test="isDel != null ">
                is_del = #{isDel},
            </if>

            update_time=now(3)
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteByIds">
        UPDATE common_job
        SET is_del =
        1,update_time=now(3),update_user_id=#{entity.updateUserId},update_user_name=#{entity.updateUserName}
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <insert id="insert" parameterType="com.net.sparrow.entity.common.CommonJobEntity">
        INSERT INTO common_job
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="jobName != null  and jobName != ''">
                job_name,
            </if>


            <if test="pauseStatus != null ">
                pause_status,
            </if>


            <if test="beanName != null  and beanName != ''">
                bean_name,
            </if>


            <if test="methodName != null  and methodName != ''">
                method_name,
            </if>


            <if test="cronExpression != null  and cronExpression != ''">
                cron_expression,
            </if>


            <if test="params != null  and params != ''">
                params,
            </if>


            <if test="remark != null  and remark != ''">
                remark,
            </if>


            <if test="createUserId != null ">
                create_user_id,
            </if>


            <if test="createUserName != null  and createUserName != ''">
                create_user_name,
            </if>


            <if test="createTime != null ">
                create_time,
            </if>


            <if test="updateUserId != null ">
                update_user_id,
            </if>


            <if test="updateUserName != null  and updateUserName != ''">
                update_user_name,
            </if>


            <if test="updateTime != null ">
                update_time,
            </if>


            <if test="isDel != null ">
                is_del,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="jobName != null  and jobName != ''">
                #{jobName},
            </if>

            <if test="pauseStatus != null ">
                #{pauseStatus},
            </if>

            <if test="beanName != null  and beanName != ''">
                #{beanName},
            </if>

            <if test="methodName != null  and methodName != ''">
                #{methodName},
            </if>

            <if test="cronExpression != null  and cronExpression != ''">
                #{cronExpression},
            </if>

            <if test="params != null  and params != ''">
                #{params},
            </if>

            <if test="remark != null  and remark != ''">
                #{remark},
            </if>

            <if test="createUserId != null ">
                #{createUserId},
            </if>

            <if test="createUserName != null  and createUserName != ''">
                #{createUserName},
            </if>

            <if test="createTime != null ">
                #{createTime},
            </if>

            <if test="updateUserId != null ">
                #{updateUserId},
            </if>

            <if test="updateUserName != null  and updateUserName != ''">
                #{updateUserName},
            </if>

            <if test="updateTime != null ">
                #{updateTime},
            </if>

            <if test="isDel != null ">
                #{isDel},
            </if>

        </trim>
    </insert>

    <select id="findByIds" parameterType="Long"
            resultMap="CommonJobResult">
        SELECT
        <include refid="selectCommonJobColumn"/>
        FROM common_job
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

</mapper>
